{
	"indent": {
		"value": "    "
	},
    "whiteSpace": {
        "before": {
            "FunctionExpressionOpeningBrace": 1,
            "FunctionExpressionClosingBrace": 0
        },
        "after": {
            "FunctionExpressionOpeningBrace": 1,
            "FunctionExpressionClosingBrace": -1,
            "FunctionReservedWord": 1
        }
    },
    "plugins": [
        "esformatter-quotes",
        "esformatter-semicolons",
        "esformatter-dot-notation",
        "esformatter-braces"
    ],
    "quotes": {
        "type": "single",
        "avoidEscape": false
    }
}
